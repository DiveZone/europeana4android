<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="europeana_theme" parent="@style/Theme.AppCompat.Light">
        <!-- COMPAT STYLES -->
        <item name="actionBarStyle">@style/europeana_actionBarStyle</item>
        <item name="actionBarTabTextStyle">@style/europeana_tabTextStyle</item>
    </style>

    <style name="europeana_actionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/actionbar_background</item>
        <item name="backgroundStacked">@color/actionbar_background</item>
        <item name="backgroundSplit">@color/actionbar_background</item>
    </style>

    <!-- action bar tab text -->
    <style name="europeana_tabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/emphasis</item>
    </style>

</resources>