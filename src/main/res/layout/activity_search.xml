<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/kitKatFrameLayout_activity_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout_activity_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >

        <FrameLayout
            android:id="@+id/content_frame_searchgrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ListView
            android:id="@+id/drawer_facets"
            android:layout_width="@dimen/drawer_facets_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/background_drawer"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"/>

    </android.support.v4.widget.DrawerLayout>
</FrameLayout>