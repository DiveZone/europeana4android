<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeActivity" >
    
    <EditText
        android:id="@+id/activity_home_edittext_query"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/action_search"
        android:ems="10" 
        android:drawableLeft="@drawable/ic_action_search"
        android:imeOptions="actionSearch|flagNoExtractUi"
        >
        <requestFocus />
    </EditText>
    
    <GridView 
        android:id="@+id/activity_home_gridview_suggestions"
        android:layout_below="@id/activity_home_edittext_query"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:requiresFadingEdge="vertical"
        android:numColumns="@integer/home_suggestions_columns"
        />
    
    <FrameLayout
        android:id="@+id/activity_home_fragment_blog"
        android:layout_below="@id/activity_home_edittext_query"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        />

</RelativeLayout>