<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.eledge.android.eu.europeana"
    android:versionCode="30"
    android:versionName="v0.1-alpha" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <permission
        android:name="net.eledge.android.eu.europeana.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="net.eledge.android.eu.europeana.permission.MAPS_RECEIVE" />

    <application
        android:name="EuropeanaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:theme="@style/europeana_theme" >
        <meta-data
            android:name="eu.europeana.api.v2.API_PUBLIC_KEY"
            android:value="eu4andrd" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDvUz1lwwQkTNAdxKsfk3VM98FfX5OtdMY" />

        <activity
            android:name="net.eledge.android.eu.europeana.gui.activity.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.eledge.android.eu.europeana.gui.activity.SearchActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:parentActivityName="net.eledge.android.eu.europeana.gui.activity.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.europeana.eu"
                    android:path="/portal/search.html"
                    android:scheme="http" />
                <data
                    android:host="europeana.eu"
                    android:path="/portal/search.html"
                    android:scheme="http" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value="true" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.eledge.android.eu.europeana.gui.activity.HomeActivity" />
        </activity>
        <activity
            android:name="net.eledge.android.eu.europeana.gui.activity.RecordActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:parentActivityName="net.eledge.android.eu.europeana.gui.activity.SearchActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.europeana.eu"
                    android:pathPattern="/portal/record/.*/.*"
                    android:scheme="http" />
                <data
                    android:host="europeana.eu"
                    android:pathPattern="/portal/record/.*/.*"
                    android:scheme="http" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.eledge.android.eu.europeana.gui.activity.SearchActivity" />
        </activity>

        <meta-data
            android:name="android.app.default_searchable"
            android:value="net.eledge.android.eu.europeana.gui.activity.SearchActivity" />

        <provider
            android:name="net.eledge.android.eu.europeana.provider.SuggestionProvider"
            android:authorities="net.eledge.android.eu.europeana.provider.SuggestionProvider"
            android:exported="false"
            android:syncable="false" />
    </application>

</manifest>