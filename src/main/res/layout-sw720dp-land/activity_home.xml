<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".HomeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_homescreen" />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <EditText
            android:id="@+id/activity_home_edittext_query"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edittext_search"
            android:ems="10"
            android:hint="@string/action_search"
            android:imeOptions="actionSearch|flagNoExtractUi"
            android:inputType="text">

            <requestFocus />
        </EditText>

        <Spinner
            android:id="@+id/activity_home_spinner_profile"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_below="@id/activity_home_edittext_query" />

        <GridView
            android:id="@+id/activity_home_gridview_suggestions"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/activity_home_spinner_profile"
            android:numColumns="@integer/home_suggestions_columns"
            android:requiresFadingEdge="vertical" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/activity_home_fragment_blog"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="4dp"
        android:background="@drawable/bordershadow_left" />

</LinearLayout>