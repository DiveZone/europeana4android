<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="dialog_hidetitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="drawerItem" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="drawerFacetHeaderOpen" parent="drawerItem">
        <item name="android:drawableTop">@drawable/shape_facet_section</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawerFacetHeader" parent="drawerFacetHeaderOpen">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="drawerFacet" parent="drawerItem">
        <item name="android:drawableStart">@drawable/btn_check_off_holo_light</item>
        <item name="android:drawableTop">@drawable/shape_facet_divider</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="drawerFacetIcon" parent="drawerItem">
        <item name="android:drawableTop">@drawable/shape_facet_divider</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">2dp</item>
        </style>
    
    <style name="drawerFacetSelected" parent="drawerFacet">
        <item name="android:drawableStart">@drawable/btn_check_on_holo_light</item>
        <item name="android:textStyle">bold</item>
	</style>

</resources>