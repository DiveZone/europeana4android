<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/fragment_search_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/griditem_searchresult_spacing"
        android:layout_marginRight="@dimen/griditem_searchresult_spacing"
        android:horizontalSpacing="@dimen/griditem_searchresult_spacing"
        android:verticalSpacing="@dimen/griditem_searchresult_spacing"
        android:numColumns="@integer/search_results_columns"
        android:stretchMode="columnWidth" />

    <TextView
        android:id="@+id/fragment_search_textview_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:background="@color/emphasis_transparant"
        android:gravity="center"
        android:text="@string/msg_searching"
        android:textColor="@android:color/white"
        android:visibility="visible" />

</RelativeLayout>