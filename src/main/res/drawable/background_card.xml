<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:top="5dp"
        android:bottom="3dp"
        android:left="4dp"
        android:right="3dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="2dp"/>

            <solid android:color="#cfcfcf"/>
        </shape>
    </item>
    <item
        android:top="3dp"
        android:bottom="5dp"
        android:left="3dp"
        android:right="4dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="2dp"/>

            <solid android:color="@android:color/white"/>

            <padding
                android:bottom="7dp"
                android:left="5dp"
                android:right="6dp"
                android:top="5dp"/>
        </shape>
    </item>

</layer-list>