<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="net.eledge.android.toolkit.gui.GuiUtils"/>
        <variable
            name="article"
            type="net.eledge.android.europeana.db.model.BlogArticle"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <!-- android:layout_margin="@dimen/listitem_blog_spacing" -->

        <TextView
            style="@style/homeBlogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{article.title}'/>

        <TextView
            style="@style/homeBlogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='@{article.description}'/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/homeBlogAuthorDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text='@{@string/fragment_home_blog_posted(article.author)}'/>

            <TextView
                style="@style/homeBlogAuthorDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text='@{article.formattedDate}'/>
        </LinearLayout>

    </LinearLayout>
</layout>
