<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="settings_locale_app"
        android:title="@string/settings_locale_app"
        android:dialogTitle="@string/settings_locale_app"
        android:entries="@array/settings_locale_app_choices"
        android:entryValues="@array/settings_locale_app_values"
        android:defaultValue="@string/settings_locale_app_default"/>

    <ListPreference
        android:key="settings_locale_content"
        android:title="@string/settings_locale_content"
        android:dialogTitle="@string/settings_locale_content"
        android:entries="@array/settings_locale_content_choices"
        android:entryValues="@array/settings_locale_content_values"
        android:defaultValue="@string/settings_locale_content_default"/>

</PreferenceScreen>