<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kitKatFrameLayout_activity_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_search"
        android:background="@null" />


    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout_activity_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".gui.activity.RecordActivity">

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_record_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <ListView
            android:id="@+id/drawer_items"
            android:layout_width="@dimen/drawer_items_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/background_drawer"
            android:choiceMode="singleChoice"
            android:dividerHeight="0dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <!--<com.google.android.gms.maps.MapView-->
            <!--android:id="@+id/fragment_record_map_mapview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/background_card"-->
            <!--android:layout_margin="@dimen/record_map_spacing"-->
            <!--android:padding="@dimen/record_map_spacing"-->
            <!--/>-->


        </android.support.v7.widget.CardView>

        <include
            layout="@layout/include_record_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.DrawerLayout>
</FrameLayout>