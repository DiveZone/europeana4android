<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageview_searchItemImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/contentdescriptor_searchitem_image" />

    <TextView
        android:id="@+id/textview_searchItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageview_searchItemImage"
        android:layout_alignTop="@id/imageview_searchItemImage"
        android:layout_margin="1dp"
        android:background="#BF000000"
        android:gravity="center"
        android:textColor="#000000" />

</RelativeLayout>