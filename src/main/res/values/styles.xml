<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="dialog_hidetitle" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="griditem_suggestion">
        <item name="android:background">@drawable/background_card</item>
        <item name="android:height">@dimen/griditem_suggestion_height</item>
    </style>

    <style name="griditem_suggestion_text">
        <item name="android:textSize">@dimen/griditem_suggestion_textsize_suggestion</item>
    </style>

    <style name="griditem_suggestion_info">
        <item name="android:textSize">@dimen/griditem_suggestion_textsize_info</item>
        <item name="android:textColor">@color/emphasis</item>
    </style>

    <style name="drawerItem"><!--  parent="android:Widget.Light.TextView"> -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/drawer_facets_minHeight</item>
    </style>

    <style name="drawerItemSection">
        <item name="android:textColor">@color/background_drawer</item>
        <item name="android:background">@color/background_facet_section</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="drawerFacetHeaderOpen" parent="drawerItem">
        <item name="android:drawableTop">@drawable/shape_facet_section</item>
        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="drawerFacetHeader" parent="drawerFacetHeaderOpen">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="drawerFacet" parent="drawerItem">
        <item name="android:drawableLeft">@drawable/btn_check_buttonless_off</item>
        <item name="android:drawableTop">@drawable/shape_facet_divider</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="drawerFacetIcon" parent="drawerItem">
        <item name="android:drawableTop">@drawable/shape_facet_divider</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="drawerFacetSelected" parent="drawerFacet">
        <item name="android:drawableLeft">@drawable/btn_check_buttonless_on</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recordTitle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recordTitleIcon">
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="recordDetailTitle">
        <!-- <item name="android:textAllCaps">true</item> -->
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recordDetailContent">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="recordDetailSeeMore">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableRight">@drawable/ic_action_search</item>
    </style>

    <style name="homeBlogSectionTitle">
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="homeBlogTitle">
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeBlogContent">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="homeBlogAuthorDate">
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="pagerTitleStrip">
        <item name="android:textColor">@color/background_drawer</item>
        <item name="android:background">@color/emphasis_transparant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>