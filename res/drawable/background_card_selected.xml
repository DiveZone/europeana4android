<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="1dp"
        android:top="2dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#cfcfcf" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:right="1dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="@color/emphasis" />

            <padding
                android:bottom="4dp"
                android:left="2dp"
                android:right="3dp"
                android:top="2dp" />
        </shape>
    </item>

</layer-list>