<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".gui.activity.RecordActivity" >

    <ListView
        android:id="@+id/drawer_items"
        android:layout_width="@dimen/drawer_items_width"
        android:layout_height="match_parent"
        android:background="@color/background_drawer"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

    <FrameLayout
        android:id="@+id/content_frame_record"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/drawer_items" />

</RelativeLayout>