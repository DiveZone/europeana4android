<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/primary_color"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_homescreen">


    <EditText
        android:id="@+id/toolbar_searchform_edittext_query"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/form_search_query"
        android:ems="10"
        android:drawableLeft="@drawable/ic_edittext_search"
        android:imeOptions="actionSearch|flagNoExtractUi">

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/activity_home_spinner_profile"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" />

</android.support.v7.widget.Toolbar>