<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme" parent="FrameworkRoot.Theme">
        <!-- Only needed for pre-L -->
        <!--<item name="android:editTextBackground">@drawable/edit_text</item>-->
        <!--<item name="android:editTextStyle">@style/Widget.IOSched.EditText</item>-->
    </style>

    <style name="Theme.Europeana.Base" parent="Theme">
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="windowActionBar">false</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.Europeana" parent="Theme.Europeana.Base" />

    <!-- action bar tab text -->
    <style name="europeana_tabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText"/>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>